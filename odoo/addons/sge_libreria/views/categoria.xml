<odoo>
  <data>
    <record id="sge_libreria.categoria_form" model="ir.ui.view">
        <field name="name">sge.libreria.categoria.form</field>
        <field name="model">sge.libreria.categoria</field>
        <field name="arch" type="xml">
          <form string="">
            <sheet>
              <group>
                <field name="name" />
                <field name="description"></field> 
              </group>
            </sheet>
          </form>
        </field>
      </record>
    </record>

    <record id="sge_libreria.categoria_tree" model="ir.ui.view">
      <field name="name">sge.libreria.categoria.tree</field>
      <field name="model">sge.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree string="Categoria">
          <field name="name" />
          <field name="description"></field>     
        </tree>
      </field>
    </record>
      
  </data>
</odoo>
